<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="mainLayout" spacing="3" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <Label fx:id="title" maxWidth="400.0" style="-fx-font-size: 125%;" text="Choose a board...">
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </Label>
        <TextField fx:id="queryField" prefColumnCount="30">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </TextField>
        <ScrollPane minHeight="200" maxHeight="200">
            <VBox fx:id="boardList" style="-fx-border-radius: 3; -fx-background-color: white; -fx-border-width: 1px; -fx-border-color: black;">
                <padding>
                    <Insets />
                </padding>
            </VBox>
        </ScrollPane>
    </children>
</VBox>
